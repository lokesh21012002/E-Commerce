@model Product





<h1>Edit</h1>

<form method="post">
    <div class="row">
        <div asp-validation-summary="All"></div>
        <div class="col">
            <input asp-for="Title" type="text" class="form-control" placeholder="Category name">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="col">
            <input asp-for="Description" type="text" class="form-control" placeholder="Display order">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="col">
            <input asp-for="Author" type="text" class="form-control" placeholder="Display order">
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="col">
            <input asp-for="ISBN" type="text" class="form-control" placeholder="Display order">
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>
        <div class="col">
            <input asp-for="Price" type="text" class="form-control" placeholder="Display order">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="col">
            <input asp-for="Price50" type="text" class="form-control" placeholder="Display order">
            <span asp-validation-for="Price50" class="text-danger"></span>
        </div>
        <div class="col">
            <input asp-for="Price100" type="text" class="form-control" placeholder="Display order">
            <span asp-validation-for="Price100" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary pt-10">Edit</button>
    <a asp-controller="Product" asp-action="Index">Back to List</a>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"></partial>


    }
}