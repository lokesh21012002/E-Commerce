@model List<Category>

@* @if (TempData["msg"] != null)
{
<h2>@TempData["msg"]</h2>
} *@

<partial name="_Partial" />

<div class="container">
    <div class="row pt-4">

        <div class="col-6">
            <h2 class="text-primary">Category List</h2>

        </div>



        <div class="col-6 text-end">
            <a asp-action="Add" class="btn btn-primary">Add
                Category</a>

            </a>



        </div>


    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name


                </th>
                <th>
                    Display Order
                </th>

                <th></th>

            </tr>

        </thead>

        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-itemid="@obj.ID"
                                class="btn btn-primary mx-2">Edit</a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-itemid="@obj.ID"
                                class="btn btn-danger mx-2">Delete</a>

                        </div>
                    </td>

                </tr>



            }

            <tr>
        </tbody>
    </table>


</div>